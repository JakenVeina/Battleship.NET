<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
    xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
    xmlns:c="clr-namespace:Battleship.NET.Avalonia.Controls;assembly=Battleship.NET.Avalonia"
    xmlns:u="clr-namespace:Battleship.NET.Avalonia.ViewUtilities;assembly=Battleship.NET.Avalonia"
    x:Class="Battleship.NET.Avalonia.Gamespace.Setup.SetupGamespaceBoardPositionView">

  <Rectangle DragDrop.AllowDrop="True">
    <Rectangle.Styles>
      <Style Selector="Rectangle.EvenGridPosition"> <Setter Property="Fill" Value="#DDDDFF"/> </Style>
      <Style Selector="Rectangle.OddGridPosition">  <Setter Property="Fill" Value="#EEEEFF"/> </Style>
    </Rectangle.Styles>
    
    <i:Interaction.Behaviors>
      <u:DragEnterTriggerBehavior
          DataFormat="Battleship.NET.ShipSegmentAssetModel"
          Effects="Move">
        <ia:InvokeCommandAction Command="{Binding ReceiveShipSegmentCommand}"/>
      </u:DragEnterTriggerBehavior>

      <u:ClassSelectorBehavior Data="{Binding Position, Converter={x:Static u:GridPositionConverters.IsEven}}">
        <u:ClassMapping Value="True"  Class="EvenGridPosition"/>
        <u:ClassMapping Value="False" Class="OddGridPosition"/>
      </u:ClassSelectorBehavior>
    </i:Interaction.Behaviors>
  </Rectangle>

</UserControl>
