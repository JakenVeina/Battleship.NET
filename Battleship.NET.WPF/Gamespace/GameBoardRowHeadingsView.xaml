<UserControl 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:gamespace="clr-namespace:Battleship.NET.WPF.Gamespace"
        x:Class="Battleship.NET.WPF.Gamespace.GameBoardRowHeadingsView"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=gamespace:GameBoardRowHeadingsViewModel}">

    <ItemsControl ItemsSource="{Binding RowHeadings.Value}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid
                    Columns="1"
                    Rows="{Binding RowHeadings.Value.Length}"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
                
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Viewbox Stretch="Uniform">
                    <TextBlock
                        Width="10"
                        Height="10"
                        FontSize="8"
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding}"/>
                </Viewbox>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
